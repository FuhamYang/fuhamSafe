<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="my">
        <item name="@android:windowEnterAnimation">@anim/rokey</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 隐藏标题栏 -->
    	 <item name="android:windowNoTitle">true</item>
    </style>




    <style name="ButtonStyle" >

        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_guide_selector</item>
        <item name="android:textColor">@drawable/btn_guide_text</item>

    </style>

    <style name="widget_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>



    <style name="TitleStyle" >
   	    <item name="android:layout_width">match_parent</item>
   	    <item name="android:layout_height">wrap_content</item>
   		<item name="android:padding">8dp</item>
   		<item name="android:background">@color/titleBackground</item>
   		<item name="android:textColor">@color/white</item>
   		<item name="android:textSize">20sp</item>
   	</style>

    <style name="ContentTitleStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContentStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lowWhite</item>
    </style>

    <style name="PopupLinearLayoutStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="PopupImageViewStyle" >
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">2dp</item>
    </style>

    
</resources>

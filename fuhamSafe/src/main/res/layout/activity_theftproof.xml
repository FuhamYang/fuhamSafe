<?xml version="1.0" encoding="utf-8"?>
<com.yang.fuhamsafe.view.BackgroundLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/contentBackground"
    >

    <TextView
        android:id="@+id/textView1"
		style="@style/TitleStyle"
        android:layout_alignParentTop="true"
        android:text="手机防盗" />
	<RelativeLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_below="@+id/textView1"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:padding="8dp"
	    >
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="17sp"
	        android:textColor="@color/white"
	        android:text="安全号码 " />
	    <TextView
	        android:id="@+id/phone_nunber"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textSize="17sp"
	        android:textColor="@color/white"
	        android:text="3215" />
	    
	</RelativeLayout>
	
	<View 	android:layout_below="@+id/relativeLayout1"	
	    	android:id="@+id/view1"    	
	        android:layout_width="match_parent"
	        android:layout_height="0.3dp"
	        android:background="@color/white"
	        >
	</View> 
	
	<RelativeLayout
	    android:id="@+id/relativeLayout2"
	    android:layout_below="@+id/view1"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:padding="8dp"
		android:background="@drawable/shape_selector"
	    >
	    <TextView
	        android:id="@+id/openInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			
	        android:textSize="17sp"
	        android:textColor="@color/white"
	        android:text="已开启防盗保护" />
	    <com.yang.fuhamsafe.view.ToggleButton
	        android:id="@+id/openStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	         />
	    
	</RelativeLayout>
	
	<View 	android:layout_below="@+id/relativeLayout2"	    	
	        android:layout_width="match_parent"
	        android:id="@+id/view2" 
	        android:layout_height="0.3dp"
	        android:background="@color/white"
	        >
	    
	</View> 
	
	 <TextView android:id="@+id/enterGuide"
	     	android:padding="8dp"
	     	android:layout_below="@+id/view2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	    
	        android:textSize="17sp"
	        android:clickable="true"
	        android:onClick="reEnterGuide"
	        android:text="重新进入设置向导"
	        android:background="@drawable/shape_selector"
	        android:textColor="@color/white"
	     />
	 
	 <View 	android:layout_below="@+id/textView5"	    	
	        android:layout_width="match_parent"
	        android:id="@+id/view3" 
	        android:layout_height="0.3dp"
	        android:background="@color/white"
	        >
	     
	 </View> 
</com.yang.fuhamsafe.view.BackgroundLayout >

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView1"
        style="@style/TitleStyle"
        android:text="添加号码" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="输入电话号码"
        android:inputType="phone" >
    </EditText>
    <Button
        android:id="@+id/select_button_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_guide_selector"
        android:text="选择联系人"
        android:textColor="@drawable/btn_guide_text" />
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <CheckBox
            android:id="@+id/cb_number_restrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="电话拦截"
            />
        <CheckBox

            android:layout_alignParentRight="true"
            android:id="@+id/cb_sms_restrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="短信拦截"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_black_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:background="@drawable/btn_guide_selector"
            android:textColor="@drawable/btn_guide_text" />


        <Button
            android:id="@+id/bt_black_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@drawable/btn_guide_selector"
            android:textColor="@drawable/btn_guide_text"

            />


    </LinearLayout>

</LinearLayout>
